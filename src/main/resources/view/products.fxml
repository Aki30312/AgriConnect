<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.agriconnect.controller.FarmerController">


    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color:#f4f4f4;">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Button text="Back" onAction="#goBack"/>
            <Label text="Manage Products" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <TableView fx:id="productTable" prefHeight="260">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="180"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="colQty" text="Qty" prefWidth="80"/>
                </columns>
            </TableView>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="80"/>
                </columnConstraints>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="e.g. Tomatoes"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField" promptText="e.g. 50.00"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Quantity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="qtyField" promptText="e.g. 10"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Add" onAction="#addProduct"/>
                <Button text="Update" onAction="#updateProduct"/>
                <Button text="Delete" onAction="#deleteProduct"/>
                <Button text="Clear" onAction="#clearFields"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
